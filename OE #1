class Hero:
    def __init__(self, name, role, damage_type):
        self.name = name
        self.role = role
        self.damage_type = damage_type

    def __str__(self):
        return f"{self.name} is a {self.role} hero with {self.damage_type} damage."

def describe_team(heroes):
    for hero in heroes:
        print(hero)

hero1 = Hero("Mathilda", "Roam", "Magic")
hero2 = Hero("Hayabusa", "Assassin", "Physical")
hero3 = Hero("Chou", "Fighter", "Physical")
hero4 = Hero("Gord", "Mage", "Magic")
hero5 = Hero("Cecilion", "Mage", "Magic")

dream_team = [hero1, hero2, hero3, hero4, hero5]

describe_team(dream_team)
